source_code = "var dir:int = RIGHT
var cobs:int
cobs = 0
var crop:int
crop = CORN

func move_till_wall(dir:int):
	while move(dir):
		continue

while true:
	if not plant(crop):
		move_till_wall(dir)
		if dir == RIGHT:
			dir = LEFT
		else:
			dir = RIGHT
	else:
		cobs = cobs + 1
		if cobs >= 11:
			crop = GRAPE
	if not move(dir):
		if not move(DOWN):
			break
		if dir == RIGHT:
			dir = LEFT
		else:
			dir = RIGHT

dir = LEFT
while true:
	if not harvest():
		move_till_wall(dir)
		if dir == RIGHT:
			dir = LEFT
		else:
			dir = RIGHT
	if not move(dir):
		move(UP)
		if dir == RIGHT:
			dir = LEFT
		else:
			dir = RIGHT
"
