func move_till_wall(dir:int):
	while true:
		if not move(dir):
			return

var dir:int = RIGHT

var count:int = 0
var crop:int
var y_dir:int = DOWN
var y_opp:int = UP
crop = GRAPE
plant(crop)
while true:
	if count == 26:
		crop = CORN
	
	if not(move(dir)):
		if not move(y_dir):
			wait()
			harvest()
			harvesting = true
			y_dir = UP
			y_opp = DOWN
			dir = LEFT
			continue
		if not move(dir):
			if dir == RIGHT:
				dir = LEFT
			else:
				dir = RIGHT
			if harvesting:
				harvest()
			else:
				plant(crop)
			count = count + 1
			continue
		move(dir)
		move(y_opp)
	
	if harvesting:
		if not harvest():
			move_till_wall(dir)
			harvest()
		continue
	if not plant(crop):
		move_till_wall(dir)
		move(dir)
		plant(crop)
		count = count + 1
	else:
		count = count + 1

"
